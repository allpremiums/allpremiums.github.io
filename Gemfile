source "https://rubygems.org"
gemspec :name => "jekyll"

gem "rake", "~> 13.0"

group :development do
  gem "launchy", "~> 2.3"
  gem "pry"

  gem "pry-byebug" unless RUBY_ENGINE == "jruby"
end

gem "minima", "~> 2.0"
gem "liquid-c"

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-include-cache'
  gem 'jekyll-paginate-v2'
  gem 'jekyll-tagging'
  gem 'jekyll-archives'
  gem 'jekyll-seo-tag'
  gem 'jekyll-webp'
  gem 'jekyll-redirect-from'
end
